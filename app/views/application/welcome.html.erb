<h1>Home</h1>



<% if !!@logged_in_user %>
  <section>
    <h2>
      <%= link_to "Users", users_path %>
      <hr>
    </h2>
  </section>
  <section>
    <h2>
      <%= link_to "Bands", bands_path %>
      <hr>
    </h2>
  </section>
<% else %>
  <section>
    <h2>
      <%= link_to "Sign Up", new_user_path %>
      <hr>
    </h2>
  </section>
<% end %>

<section>
  <h2>Public Posts <% if !!@logged_in_user %><%= link_to "+", new_user_post_path(@logged_in_user), class: "button-add" %><% end %></h2>
  <%= render "./posts/posts" %>
</section>
