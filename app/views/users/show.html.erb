<h1>Profile</h1>
<h2 class="name"><%= @requested_user.name %></h2>
<h3>@<%= @requested_user.username %></h3>

<% if !@bands.empty? %>
  <section>
    <h2>Bands <%= link_to "+", new_band_path, class: "button-add" %></h2>
    <ul class="bands">
      <% @bands.each do |band| %>
        <li class="band">
          <h4><%= band.get_roles_string(@requested_user) %></h4>
          <p><%= link_to band.name, band_path(band) %></p>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>

<% if @requested_user == @logged_in_user || @logged_in_user.admin? %>
  <section>
    <h2>Settings</h2>
    <div>
      <p>
        <%= link_to "Edit Profile", edit_user_path %>
        <%= link_to "Change Password", edit_user_path, class: "" %>
      </p>
      <%= form_with url: user_path(@requested_user), method: "delete", class: 'form-static', local: true do |f| %>
      <%= f.submit "Delete Account", class: 'button-caution'%>
      <% end %>
    </div>
  </section>
<% end %>
<section>
  <h2>Posts <%= link_to "+", new_user_post_path(@logged_in_user), class: "button-add" %></h2>
  <% if @posts.empty? %>
    <ul class="posts">
      <li class="post">
        <h4>Nobody Here!</h4>
        <p>Nothing here yet!</p>
        <p>Click the + above to start!</p>
      </li>
    </ul>
  <% else %>
    <%= render "./posts/posts" %>
  <% end %>
</section>
