<%= render "./layouts/errors" %>

<%= form_with model: @user, url: "/#{(@user.username ||= '')}", local: true do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :username %>
  <br>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br>
  <%= f.submit %>
<% end %>
