<section>
  <%= form_with model: @requested_user, local: true do |f| %>
    <div>
      <h4><%= f.label :name %></h4>
      <%= f.text_field :name, required: true, autofocus: true  %>
    </div>
    <div>
      <h4><%= f.label :username %></h4>
      <%= f.text_field :username, required: true %>
    </div>
    <div>
      <% if @logged_in_user != @requested_user && @logged_in_user.admin? %>
        <%= f.label :role %>
        <%= f.collection_select :role, @roles, :to_s, :to_s %>
      <% else %>
        <h4><%= f.label :password %></h4>
        <%= f.password_field :password, required: true %>
      <% end %>
    </div>
    <%= f.submit %>
  <% end %>
</section>
