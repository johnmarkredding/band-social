<h1>New Post</h1>

<section>
<%= form_with url: user_posts_path(@logged_in_user), class: "stand-alone", method: 'POST', local: true do |f| %>
  <div>
    <h4><%= f.label :body, "Write a post!" %></h4>
    <%= f.text_area :body, required: true, autofocus: true  %>
  </div>
  <%= f.submit "Post" %>
<% end %>
</section>
