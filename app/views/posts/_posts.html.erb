<ul class="posts">
  <% if @posts.empty? %>
    <li class="post">
      <h4>Nobody Here!</h4>
      <p>Nothing here yet!</p>
    </li>
  <% else %>
    <% @posts.each do |post| %>
      <li class="post">
        <h4><%= link_to post.user.full_handle, user_path(post.user) %></h4>
        <p><%= post.body %></p>
      </li>
    <% end %>
  <% end %>
</ul>
