<section>
  <h1>New Band</h1>
  <%= form_with model: @new_band, local: true do |f|%>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true  %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <%= f.submit %>
  <% end %>
</section>
