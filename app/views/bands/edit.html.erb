<h1>Edit Band</h1>

<section>
  <%= form_with model: @requested_band, local: true, class:"stand-alone" do |f|%>
  <div>
    <h4><%= f.label :name %></h4>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div>
    <h4><%= f.label :description %></h4>
    <%= f.text_area :description %>
  </div>
  <%= f.submit "Update" %>
  <% end %>
</section>
